<h1> New Event </h1>

<%= form_for(@event) do |f| %>

  <% if @event.errors.any? %>
    <% @event.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :date %>
  <%= f.datetime_select :date %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.submit "Create my event" %>

<% end %>